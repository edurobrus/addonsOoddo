<!-- mi_modulo_prueba/views/mi_prueba_views.xml -->
<odoo>
    <record id="view_mi_prueba_form" model="ir.ui.view">
        <field name="name">mi.prueba.form</field>
        <field name="model">mi.prueba</field>
        <field name="arch" type="xml">
            <form string="Prueba">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mi_prueba_tree" model="ir.ui.view">
        <field name="name">mi.prueba.tree</field>
        <field name="model">mi.prueba</field>
        <field name="arch" type="xml">
            <tree string="Prueba">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Acción para mostrar el modelo en el menú -->
    <record id="action_mi_prueba" model="ir.actions.act_window">
        <field name="name">Prueba</field>
        <field name="res_model">mi.prueba</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú para acceder al modelo -->
    <menuitem id="menu_mi_prueba_root" name="Pruebas"/>
    <menuitem id="menu_mi_prueba" name="Mi Prueba" parent="menu_mi_prueba_root" action="action_mi_prueba"/>
</odoo>
