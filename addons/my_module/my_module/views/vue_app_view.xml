<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Plantilla QWeb para cargar la aplicación Vue.js -->
    <template id="vue_app_template">
        <t t-call="web.layout">
            <t t-set="title">Vue App</t>
            <div id="app"></div>
            <script type="text/javascript" src="/my_module/static/src/js/vue_app.js"></script>
            <link rel="stylesheet" href="/my_module/static/src/css/vue_app.css"/>
        </t>
    </template>

    <!-- Acción del cliente para cargar la vista -->
    <record id="action_vue_app" model="ir.actions.client">
        <field name="name">Vue App</field>
        <field name="tag">vue_app_template</field>
    </record>

    <!-- Elemento de menú para acceder a la vista -->
    <menuitem id="menu_vue_app" name="Vue App" action="action_vue_app" />
</odoo>
